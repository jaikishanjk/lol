<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jai.bc"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.jai.bc.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jai.bc.credits"
            android:label="@string/title_activity_credits"
            android:parentActivityName="com.jai.bc.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jai.bc.MainActivity" />
        </activity>
        <activity
            android:name="com.jai.bc.instructions"
            android:label="@string/title_activity_instructions"
            android:parentActivityName="com.jai.bc.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jai.bc.MainActivity" />
        </activity>
        <activity
            android:name="com.jai.bc.new_game"
            android:label="@string/title_activity_new_game" >
        </activity>
        <activity
            android:name="com.jai.bc.set_complete"
            android:label="@string/title_activity_set_complete" >
        </activity>
    </application>

</manifest>